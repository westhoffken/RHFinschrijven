{% extends 'base-plain.html.twig' %}

 {% block pagename %}Uw inschrijving voor de koopjeshoek{% endblock %}
{% block body %}
    <form action="{{ path('new_search_query') }}" method="post" class="needs-validation">
        <div class="row">

            <div class="col-12">
                <!-- general form elements disabled -->
                <div class="card">


                    <!-- /.card-header -->
                    <div class="card-body">

                        <div class="col-sm-12">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Email *</label>
                                <input type="email" name="email" class="form-control" placeholder=""
                                       value="{{ searchQuery.email }}" required>
                            </div>
                        </div>


                    </div>
                    <!-- /.card-body -->

                </div>
                <!-- /.card -->
            </div>

            <div class="col-12">
                <!-- general form elements disabled -->
                <div class="card">


                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-sm-12">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Naam *</label>
                                <input type="text" name="name" class="form-control" value="{{ searchQuery.name }}"
                                       required>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->


                </div>
                <!-- /.card -->
            </div>
            <div class="col-12">
                <!-- general form elements disabled -->
                <div class="card ">


                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-sm-12">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Telefoonnummer</label>
                                <input type="text" name="phonenumber"
                                       class="form-control" {{ searchQuery.phoneNumber }} placeholder="">
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->


                </div>
                <!-- /.card -->
            </div>

            <div class="col-12">
                <!-- general form elements disabled -->
                <div class="card ">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-sm-12">
                            <!-- select -->
                            <div class="form-group">
                                <label>Gewenste maat van het matrass</label>
                                <select name="size" class="form-control">
                                    {% for size in sizes %}
                                        {% if  size.id == searchQuery.size.id %}
                                            <option value="{{ size.id }}" selected>{{ size.width }}
                                                x {{ size.height }}</option>
                                        {% else %}
                                            <option value="{{ size.id }}">{{ size.width }}
                                                x {{ size.height }}</option>
                                        {% endif %}

                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->


                </div>
                <!-- /.card -->
            </div>

            <div class="col-12">
                <div class="card ">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-sm-12">
                            <!-- select -->
                            <div class="form-group">
                                <label>Gewenste type matras (bijv. koud of traagschuim)</label>
                                <select name="type" class="form-control" id="matrassType"
                                        onchange="changeMatrass()">
                                    <option value="1" {% if searchQuery.firmness == 1 %}selected{% endif %}>
                                        Koudschuim
                                    </option>
                                    <option value="2" {% if searchQuery.firmness == 2 %}selected{% endif %}>
                                        Traagschuim
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->


                </div>
                <!-- /.card -->
            </div>


            <div class="col-12">
                <div class="card ">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-sm-12 " id="coldMatrass">
                            <!-- select -->
                            <div class="form-group">
                                <label>Gewenste soort matrass</label>
                                <select name="classification" class="form-control">
                                    <option value="1" {% if searchQuery.classification == 1 %}selected{% endif %}>
                                        Comfort
                                        De Luxe
                                    </option>
                                    <option value="2" {% if searchQuery.classification == 2 %}selected{% endif %}>
                                        Comfort Premium air
                                    </option>
                                    <option value="3" {% if searchQuery.classification == 3 %}selected{% endif %}>
                                        Perfection
                                    </option>
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-12" id="warmMatrass">
                            <!-- select -->
                            <div class="form-group">
                                <label>Gewenste soort matrass </label>
                                <select name="classification2" class="form-control">
                                    <option value="4" {% if searchQuery.classification == 4 %}selected{% endif %}>
                                        Original
                                        Support
                                    </option>
                                    <option value="5" {% if searchQuery.classification == 5 %}selected{% endif %}>
                                        Premium
                                        Support
                                    </option>
                                    <option value="6" {% if searchQuery.classification == 6 %}selected{% endif %}>
                                        Perfection
                                    </option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->


                </div>
                <!-- /.card -->
            </div>

            <div class="col-12">
                <div class="card ">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-sm-12">
                            <!-- select -->
                            <div class="form-group">
                                <label>Gewenste hardheid van het matras</label>
                                <select name="firmness" class="form-control" id="firmness">
                                    <option value="1" {% if searchQuery.firmness == 1 %}selected{% endif %}>Soft
                                    </option>
                                    <option value="2" {% if searchQuery.firmness == 2 %}selected{% endif %}>Medium
                                    </option>
                                    <option value="3" {% if searchQuery.firmness == 3 %}selected{% endif %}>Firm
                                    </option>
                                    <option value="4" {% if searchQuery.firmness == 4 %}selected{% endif %}>Extra
                                        firm
                                    </option>
                                </select>
                            </div>
                        </div>

                        <!-- /.card-body -->


                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
        {# </div> #}

        {# </div> #}
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-outline-success float-right ">Opslaan</button>
            </div>

        </div>
    </form>

{% endblock %}

