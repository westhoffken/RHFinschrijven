        function changeMatrass() {

            let firmnessElementValue = document.getElementById('matrassType').value;
            console.log(firmnessElementValue);

            if (firmnessElementValue == 1) {
                document.getElementById('coldMatrass').style.display = 'block';
                document.getElementById('warmMatrass').style.display = 'none';
            }

            if (firmnessElementValue == 2) {
                document.getElementById('coldMatrass').style.display = 'none';
                document.getElementById('warmMatrass').style.display = 'block';
            }
        }
    </script>

{% endblock %}
